<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbars="vertical">
	<View android:id="@+id/riga" android:layout_width="match_parent"
		android:layout_below="@+id/linear_layout" android:background="#fff"
		android:layout_height="1dp"></View>
	<ScrollView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/scrollView"
		android:layout_below="@+id/riga" android:layout_marginTop="15dp">
		<TextView android:textColor="#fff" android:layout_height="wrap_content"
			android:id="@+id/text_view_customdialog" android:layout_width="wrap_content"
			android:linksClickable="true"
			android:text="@string/help_message1"></TextView>
	</ScrollView>

</RelativeLayout>
