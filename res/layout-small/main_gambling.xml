<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_gambling"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/relative_layout_4carte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_layout_risultati"
        android:layout_below="@+id/text_view_titolo"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/touch_pressure_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A"
                android:textColor="#fff"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/view_drawable2"
                android:gravity="center" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="B"
                android:textColor="#fff"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/view_drawable2"
                android:gravity="center" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="C"
                android:textColor="#fff"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/view_drawable2"
                android:gravity="center" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="D"
                android:textColor="#fff"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/view_drawable2"
                android:gravity="center" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#811c1c"
        android:gravity="center"
        android:text="@string/titolo_gambling"
        android:textColor="#fff"
        android:textSize="20sp" >

    </TextView>

     <View
         android:id="@+id/view5"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_below="@id/text_view_titolo"
         android:background="#fff" />

    <RelativeLayout
        android:id="@+id/relative_layout_risultati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/riga_sopra"
        android:layout_alignLeft="@+id/relative_layout_4carte"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/text_view_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/choice"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/text_view_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_choice"
            android:text="@string/reward"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/text_view_penalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_reward"
            android:text="@string/penalty"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/text_view_net_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_penalty"
            android:text="@string/net_gain"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/text_view_choice"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_choice"
            android:layout_below="@+id/tv_choice"
            android:layout_toRightOf="@+id/text_view_reward"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_penalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_reward"
            android:layout_below="@+id/tv_reward"
            android:layout_toRightOf="@+id/tv_choice"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_net_gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_penalty"
            android:layout_below="@+id/tv_penalty"
            android:layout_toRightOf="@+id/text_view_net_gain"
            android:textSize="20sp" >
        </TextView>
    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/linear_layout_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/riga_sopra"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selezione_n" android:textSize="20sp"/>

        <TextView
            android:id="@+id/numero_carta_selezionata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/textView5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" android:layout_below="@id/textView5">
        </TextView>

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2000"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" android:layout_toRightOf="@id/text_view_t" android:layout_alignBaseline="@id/text_view_t" android:layout_marginLeft="2dp">
        </TextView>
    </RelativeLayout>

    <View
        android:id="@+id/riga_sopra"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_above="@+id/linear_layout_righello"
        android:background="#fff" >
    </View>

    <LinearLayout
        android:id="@+id/linear_layout_righello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/riga_sotto"
        android:layout_marginBottom="40dp" >

        <TextView
            android:id="@+id/_meno1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1000"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3000"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_4000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4000"
            android:textColor="#fff" >
        </TextView>

        <TextView
            android:id="@+id/_5000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"
            android:textColor="#fff" >
        </TextView>
    </LinearLayout>

    <View
        android:id="@+id/riga_sotto"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#fff" >
    </View>

    <View
        android:id="@+id/barra"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/riga_sotto"
        android:layout_marginBottom="10dp" >
    </View>

</RelativeLayout>